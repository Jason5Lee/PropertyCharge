@{
    ViewData["Title"] = "个人登录";
}

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-route-returnurl="@ViewData["ReturnUrl"]" asp-action="Login" method="post">
            <input name="role" hidden value="personale" />
            <div class="form-group">
                <label name="personaleIdString" class="control-label">身份证号</label>
                <div class="col-md-10">
                    <input name="personaleIdString" class="form-control"  required />
                </div>
            </div>
            <div class="form-group">
                <label name="password" class="control-label">密码</label>
                <div class="col-md-10">
                    <input name="password" class="form-control" type="password" required />
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default">登录</button>
            </div>
        </form>
        @{
            var failedMessage = ViewData["FailedMessage"];
            if (failedMessage != null)
            {
            <div class="alert alert-danger">
                @failedMessage
            </div>
            }
        }
    </div>
</div>
