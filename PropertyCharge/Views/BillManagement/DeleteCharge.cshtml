@model Jason5Lee.PropertyCharge.Models.Charge

@{
    ViewData["Title"] = "删除收费项";
}

<h3>确认删除如下收费项?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            收费名
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            费用
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fee)
        </dd>
        <dt class="col-sm-2">
            收费对象
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonaleId)
        </dd>
    </dl>

    <form asp-action="DeleteCharge">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="确认删除" class="btn btn-danger" /> |
        <a asp-action="Query" asp-route-personaleIdString="@Model.PersonaleId">返回</a>
    </form>
</div>
