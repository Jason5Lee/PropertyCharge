@{
    ViewData["Title"] = "账单管理";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Query">
            <div class="form-group">
                <label name="personaleIdString" class="control-label">账单个人身份证号</label>
                <input name="personaleIdString" class="form-control" required />
            </div>
            <div class="form-group">
                <input type="submit" value="查询" class="btn btn-primary" />
            </div>
        </form>
        @{
            var failedMessage = ViewData["FailedMessage"];
            if (failedMessage != null)
            {
                <div class="alert alert-danger">
                    @failedMessage
                </div>
            }
        }
    </div>
</div>
