@{
    ViewData["Title"] = "修改密码";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Password" method="post">
            <div class="form-group">
                <label name="password" class="control-label">新密码</label>
                <input name="password" class="form-control" type="password" required />
            </div>
            <div class="form-group">
                <label name="confirmPassword" class="control-label">确认新密码</label>
                <input name="confirmPassword" class="form-control" type="password" required />
            </div>
            <div class="form-group">
                <input type="submit" value="修改" class="btn btn-primary" />
            </div>
        </form>
        @{
            var failedMessage = ViewData["FailedMessage"];
            if (failedMessage != null)
            {
                <div class="alert alert-danger">
                    @failedMessage
                </div>
            }
        }
    </div>
</div>
