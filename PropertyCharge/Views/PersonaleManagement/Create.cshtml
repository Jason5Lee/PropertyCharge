@model Jason5Lee.PropertyCharge.Models.Personale

@{
    ViewData["Title"] = "Create";
}

<h1>创建</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label name="idString" class="control-label">身份证号</label>
                <input name="idString" class="form-control" required />
            </div>
            <div class="form-group">
                <label name="name" class="control-label">姓名</label>
                <input name="name" class="form-control" required />
            </div>
            <div class="form-group">
                <label name="address" class="control-label">地址</label>
                <input name="address" class="form-control" required />
            </div>
            <div class="form-group">
                <label name="password" class="control-label">初始密码</label>
                <input name="password" class="form-control" type="password" required />
            </div>
            <div class="form-group">
                <label name="confirmPassword" class="control-label">确认初始密码</label>
                <input name="confirmPassword" class="form-control" type="password" required />
            </div>
            <div class="form-group">
                <input type="submit" value="创建" class="btn btn-primary" />
            </div>
        </form>
        @{
            var failedMessage = ViewData["FailedMessage"];
            if (failedMessage != null)
            {
                <div class="alert alert-danger">
                    @failedMessage
                </div>
            }
        }
    </div>
</div>

<div>
    <a asp-action="Index">返回</a>
</div>

